---
import { mockStats } from '../../lib/mock-data';

const stats = mockStats;

// Logo placeholders for trusted by section
const trustedLogos = [
  { name: 'logoipsum', svg: '<svg viewBox="0 0 120 40" fill="currentColor"><text x="0" y="28" font-size="20" font-weight="bold">LOGO</text></svg>' },
  { name: 'brand1', svg: '<svg viewBox="0 0 120 40" fill="currentColor"><circle cx="20" cy="20" r="15"/><text x="40" y="28" font-size="16" font-weight="bold">Brand</text></svg>' },
  { name: 'company', svg: '<svg viewBox="0 0 120 40" fill="currentColor"><rect x="0" y="10" width="20" height="20" rx="4"/><text x="25" y="28" font-size="14" font-weight="bold">Company</text></svg>' },
  { name: 'studio', svg: '<svg viewBox="0 0 120 40" fill="currentColor"><polygon points="15,5 25,35 5,35"/><text x="30" y="28" font-size="14" font-weight="bold">Studio</text></svg>' },
  { name: 'agency', svg: '<svg viewBox="0 0 120 40" fill="currentColor"><text x="0" y="28" font-size="18" font-weight="bold" font-style="italic">Agency</text></svg>' },
];
---

<section class="relative bg-white overflow-hidden">
  <!-- Subtle gradient background -->
  <div class="absolute inset-0 bg-gradient-to-b from-purple-50/20 to-transparent pointer-events-none"></div>
  
  <div class="container-custom relative">
    <!-- Main Hero Content -->
    <div class="pt-16 md:pt-24 lg:pt-32 pb-12 md:pb-16 text-center">
      
      <!-- Animated Headlines - Bold & Dramatic -->
      
        <h1 class="text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-bold tracking-tight animate-fade-in-up">
          <span class="text-gradient italic">Endless</span>
          <span class="text-[var(--color-text-primary)]"> Design</span>
        </h1>
        <h1 class="text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-bold leading-[0.95] tracking-tight animate-fade-in-up delay-100">
          <span class="text-[var(--color-text-primary)]">possibilities </span>
          <span class="text-gradient italic">for everyone</span>
        </h1>
      
      
      <!-- Subtitle - Refined -->
      <p class="max-w-2xl mx-auto text-lg md:text-xl text-[var(--color-text-secondary)] mb-10 md:mb-12 animate-fade-in-up delay-200 leading-relaxed">
        Ready for top-tier design services at an unbeatable value? With one subscription, unlock unlimited design requests and elevate your brand to new heights.
      </p>
      
      <!-- CTA Button - Enhanced with micro-interactions -->
      <div class="animate-fade-in-up delay-300 mb-14 md:mb-16">
        <button class="btn-primary group consultation-trigger relative">
          <span class="mr-3 relative z-10">Get started</span>
          <span class="btn-arrow">
            <svg class="w-5 h-5 text-[#9333ea]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </span>
        </button>
      </div>
    </div>
    
    <!-- Stats Section - Enhanced typography -->
    <div class="py-12 md:py-16">
      <div class="grid grid-cols-3 gap-6 md:gap-12 max-w-4xl mx-auto">
        <!-- Happy Customers -->
        <div class="text-center animate-on-scroll group">
          <div class="text-4xl md:text-6xl lg:text-7xl font-bold text-gradient mb-2 hover-scale">
            {stats.happyCustomers}
          </div>
          <p class="text-sm md:text-base text-[var(--color-text-secondary)] font-medium">Happy customers</p>
        </div>
        
        <!-- Projects Completed -->
        <div class="text-center animate-on-scroll group">
          <div class="text-4xl md:text-6xl lg:text-7xl font-bold text-gradient mb-2 hover-scale">
            {stats.projectsCompleted}
          </div>
          <p class="text-sm md:text-base text-[var(--color-text-secondary)] font-medium">Projects completed</p>
        </div>
        
        <!-- Customer Satisfaction -->
        <div class="text-center animate-on-scroll group">
          <div class="text-4xl md:text-6xl lg:text-7xl font-bold text-gradient mb-2 hover-scale">
            {stats.satisfaction}
          </div>
          <p class="text-sm md:text-base text-[var(--color-text-secondary)] font-medium">Customer satisfaction</p>
        </div>
      </div>
    </div>
    
    <!-- Trusted By Section - Infinite Carousel -->
    <div class="py-12 md:py-16 border-t border-[var(--color-border)]">
      <p class="text-center text-[var(--color-text-muted)] mb-10 text-xs uppercase tracking-[0.2em] font-medium">Trusted by</p>
      
      <!-- Infinite Carousel Wrapper -->
      <div class="overflow-hidden relative">
        <!-- Carousel Track - Multiple duplicates for seamless circular flow -->
        <div class="carousel-track flex items-center gap-10 md:gap-16">
          {/* Repeat logos 4 times to ensure no gaps at any screen size */}
          {[...Array(4)].map((_, setIndex) => (
            trustedLogos.map((logo, logoIndex) => (
              <div 
                key={`${setIndex}-${logoIndex}`}
                class="h-8 md:h-10 opacity-30 hover:opacity-80 transition-all duration-500 grayscale hover:grayscale-0 flex-shrink-0"
              >
                <img 
                  src={`https://via.placeholder.com/120x40/f8f8f8/b0b0b0?text=${logo.name}`}
                  alt={logo.name}
                  class="h-full w-auto object-contain filter blur-[0.5px] hover:blur-0 transition-all duration-500"
                />
              </div>
            ))
          ))}
        </div>
      </div>
    </div>
  </div>
</section>