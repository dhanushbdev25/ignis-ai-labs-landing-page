---
import TypeMorph from '../interactive/TypeMorph';
---

<section class="hero-living-interface relative bg-[var(--color-bg-primary)] overflow-hidden min-h-[90vh] flex items-center">
  <!-- System Text Background - Very subtle -->
  <div class="system-text-background absolute inset-0 pointer-events-none z-0">
    <div class="system-text-item">Evolving models…</div>
    <div class="system-text-item">Adapting systems…</div>
    <div class="system-text-item">Learning patterns…</div>
  </div>
  
  <div class="container-custom relative z-10">
    <!-- Main Hero Content -->
    <div class="pt-16 md:pt-24 lg:pt-32 pb-16 md:pb-24 text-center">
      
      <!-- Primary Headline - Static, Bold -->
      <h1 class="hero-primary-headline text-5xl md:text-6xl lg:text-7xl xl:text-8xl font-bold tracking-tight mb-6 md:mb-8">
        We Don't Build Software.<br />
        We Grow Intelligence.
      </h1>
      
      <!-- Secondary Line - Type Morph Effect -->
      <div class="hero-secondary-line text-3xl md:text-4xl lg:text-5xl font-light text-[var(--color-text-secondary)] mb-6 md:mb-8 min-h-[1.2em]">
        <TypeMorph client:load />
      </div>
      
      <!-- Micro Descriptor - Subtle -->
      <p class="hero-micro-descriptor text-sm md:text-base text-[var(--color-text-muted)] opacity-70 mb-10 md:mb-12 font-light">
        Custom AI. Intelligent Platforms. Real-world Impact.
      </p>
      
      <!-- CTA Buttons -->
      <div class="hero-cta-container flex flex-col sm:flex-row items-center justify-center gap-4 md:gap-6">
        <!-- Primary CTA - Glassmorphism -->
        <button class="btn-hero-primary consultation-trigger">
          <span class="btn-hero-text">Explore the Intelligence</span>
        </button>
        
        <!-- Secondary CTA - Desktop Only -->
        <a href="#projects" class="btn-hero-secondary hidden md:inline-flex">
          See Our Work →
        </a>
      </div>
    </div>
  </div>
</section>