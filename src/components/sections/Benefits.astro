---
import { mockBenefits } from '../../lib/mock-data';

const benefits = mockBenefits;

// Icon SVG components
const icons: Record<string, string> = {
  'users': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2M23 21v-2a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>`,
  'zap': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z"/>`,
  'trending-up': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.25 18L9 11.25l4.306 4.307a11.95 11.95 0 015.814-5.519l2.74-1.22m0 0l-5.94-2.28m5.94 2.28l-2.28 5.941"/>`,
  'code': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"/>`,
  'layers': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>`,
  'shield-check': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/>`,
};
---

<section id="benefits" class="pt-16 md:pt-20 lg:pt-24 pb-8 md:pb-12 lg:pb-16 bg-[var(--color-bg-secondary)]">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16 md:mb-20 animate-on-scroll">
      <span class="section-label mb-6 inline-block">Why Choose Us</span>
      <h2 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 text-[var(--color-text-primary)] tracking-tight">
        Built for Performance
      </h2>
      <p class="text-lg md:text-xl text-[var(--color-text-secondary)] max-w-3xl mx-auto">
        World-class engineering and consulting services that drive real business impact.
      </p>
    </div>
    
    <!-- Benefits Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {benefits.map((benefit, index) => (
        <div 
          class="animate-on-scroll card group stagger-{index + 1}"
        >
          <!-- Icon -->
          <div class="w-16 h-16 rounded-2xl bg-purple-900/30 flex items-center justify-center mb-6 group-hover:bg-purple-900/50 group-hover:scale-110 transition-all duration-500">
            <svg 
              class="w-8 h-8 text-purple-600" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              set:html={icons[benefit.icon] || icons['layers']}
            />
          </div>
          
          <!-- Title -->
          <h3 class="text-xl md:text-2xl font-bold mb-4 text-[var(--color-text-primary)] tracking-tight">
            {benefit.title}
          </h3>
          
          <!-- Description -->
          <p class="text-[var(--color-text-secondary)] leading-relaxed text-lg">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
