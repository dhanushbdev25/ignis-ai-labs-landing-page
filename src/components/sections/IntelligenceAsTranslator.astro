---
import { dialSystems, mobileSliderSystems } from "../../lib/mock-data";
import IntelligenceDial from "../interactive/IntelligenceDial";
import IntelligenceMobileSlider from "../interactive/IntelligenceMobileSlider";
---

<section
  id="intelligence-translator"
  class="translator-section pt-12 md:pt-16 lg:pt-18 pb-12 md:pb-16 lg:pb-18 bg-[var(--color-bg-primary)]"
>
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-8 md:mb-10 lg:mb-12 animate-on-scroll">
      <h2
        id="one-intelligence-many-systems"
        class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 md:mb-6 text-[var(--color-text-primary)] tracking-tight"
      >
        <a
          href="#one-intelligence-many-systems"
          class="hover:opacity-80 transition-opacity"
          >Intelligence, Translated.
        </a>
      </h2>
      <p
        class="text-lg md:text-xl text-[var(--color-text-secondary)] max-w-3xl mx-auto leading-relaxed"
      >
        Our intelligence adapts to your existing platforms â€” no replacements, no
        disruption.
      </p>
    </div>

    <!-- Mobile Slider (mobile/tablet) -->
    <div class="mobile-slider-wrapper">
      <IntelligenceMobileSlider client:load systems={mobileSliderSystems} />
    </div>

    <!-- Dial Container (desktop) -->
    <div class="dial-wrapper">
      <IntelligenceDial client:load systems={dialSystems} />
    </div>
  </div>
</section>

<style is:global>
  /* ===== SECTION BASE ===== */
  .translator-section {
    position: relative;
    overflow: visible;
  }

  /* ===== MOBILE SLIDER WRAPPER ===== */
  .mobile-slider-wrapper {
    display: block;
  }

  @media (min-width: 1024px) {
    .mobile-slider-wrapper {
      display: none;
    }
  }

  /* ===== DIAL WRAPPER ===== */
  .dial-wrapper {
    position: relative;
    width: 100%;
    min-height: 500px;
    display: none;
    align-items: center;
    justify-content: center;
    padding: 1.5rem 0;
  }

  @media (min-width: 1024px) {
    .dial-wrapper {
      display: flex;
      min-height: 700px;
      padding: 2.5rem 0;
    }
  }

  /* ===== DIAL CONTAINER ===== */
  .dial-container {
    position: relative;
    width: 100%;
    max-width: 900px;
    height: 600px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .dial-container {
      height: 650px;
    }
  }

  @media (min-width: 1024px) {
    .dial-container {
      height: 700px;
      max-width: 1000px;
    }
  }


  /* ===== STATIC CORE ===== */
  .dial-core {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 260px;
    height: 260px;
    z-index: 10;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @media (min-width: 768px) {
    .dial-core {
      width: 340px;
      height: 340px;
    }
  }

  @media (min-width: 1024px) {
    .dial-core {
      width: 400px;
      height: 400px;
    }
  }


  .core-glow {
    position: absolute;
    inset: -35px;
    background: radial-gradient(
      circle,
      rgba(168, 85, 247, 0.15) 0%,
      rgba(168, 85, 247, 0.05) 50%,
      transparent 100%
    );
    border-radius: 50%;
    animation: breathingGlow 4s ease-in-out infinite;
    pointer-events: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @media (min-width: 768px) {
    .core-glow {
      inset: -45px;
    }
  }

  @media (min-width: 1024px) {
    .core-glow {
      inset: -50px;
    }
  }

  @keyframes breathingGlow {
    0%,
    100% {
      opacity: 0.6;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.05);
    }
  }

  /* Hover glow effect */
  .dial-core.core-hovered .core-glow {
    background: radial-gradient(
      circle,
      rgba(168, 85, 247, 0.35) 0%,
      rgba(168, 85, 247, 0.15) 40%,
      rgba(168, 85, 247, 0.05) 70%,
      transparent 100%
    );
    opacity: 1;
    transform: scale(1.15);
  }

  .dial-core.core-hovered .core-inner {
    border-color: rgba(168, 85, 247, 0.5);
    box-shadow: 0 0 60px rgba(168, 85, 247, 0.3);
  }

  .core-inner {
    position: relative;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(168, 85, 247, 0.15) 0%,
      rgba(168, 85, 247, 0.08) 100%
    );
    border: 2px solid rgba(168, 85, 247, 0.3);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    box-shadow: 0 0 40px rgba(168, 85, 247, 0.15);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  @media (min-width: 768px) {
    .core-inner {
      padding: 2.5rem;
    }
  }

  @media (min-width: 1024px) {
    .core-inner {
      padding: 3rem;
    }
  }

  .core-label {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-primary);
    text-align: center;
    margin-bottom: 0.875rem;
    letter-spacing: 0.02em;
    line-height: 1.3;
  }

  @media (min-width: 768px) {
    .core-label {
      font-size: 1.125rem;
      margin-bottom: 1rem;
    }
  }

  @media (min-width: 1024px) {
    .core-label {
      font-size: 1.25rem;
      margin-bottom: 1.125rem;
    }
  }

  .core-micro-text {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    text-align: center;
    opacity: 0;
    transition: opacity 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    min-height: 1.5em;
    line-height: 1.6;
    padding: 0 1rem;
    max-width: 100%;
  }

  @media (min-width: 768px) {
    .core-micro-text {
      font-size: 0.9375rem;
      padding: 0 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .core-micro-text {
      font-size: 1rem;
      padding: 0 2rem;
    }
  }

  .core-micro-text.visible {
    opacity: 1;
  }

  /* ===== DIAL RING - LOGOS ===== */
  .dial-ring {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .dial-logo {
    cursor: pointer;
    user-select: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 5;
  }

  .logo-text {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    opacity: 0.6;
    white-space: nowrap;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    filter: grayscale(100%);
    padding: 0.5rem 0.75rem;
    display: inline-block;
  }

  @media (min-width: 768px) {
    .logo-text {
      font-size: 0.9375rem;
      padding: 0.625rem 1rem;
    }
  }

  @media (min-width: 1024px) {
    .logo-text {
      font-size: 1rem;
      padding: 0.75rem 1.25rem;
    }
  }

  .dial-logo.active .logo-text {
    opacity: 1;
    color: var(--color-text-primary);
    filter: grayscale(0%);
    transform: scale(1.1);
  }

  .dial-logo:hover .logo-text {
    opacity: 0.7;
  }

  .dial-logo:focus {
    outline: 2px solid rgba(168, 85, 247, 0.5);
    outline-offset: 4px;
    border-radius: 4px;
  }

  /* ===== ACCESSIBILITY ===== */
  @media (prefers-reduced-motion: reduce) {
    .core-glow {
      animation: none !important;
    }

    .core-glow {
      opacity: 0.6;
      transform: scale(1);
    }

    .dial-logo,
    .logo-text,
    .core-micro-text,
    .dial-core {
      transition: none !important;
    }
  }

</style>
