---
import { mockProcessSteps } from '../../lib/mock-data';

const steps = mockProcessSteps;
---

<section id="process" class="pt-12 md:pt-16 lg:pt-20 pb-24 md:pb-32 lg:pb-40 bg-gradient-to-b from-white via-purple-50/30 to-white overflow-hidden">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16 animate-on-scroll">
      <span class="section-label mb-6 inline-block">Process</span>
      <h2 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 text-[var(--color-text-primary)] tracking-tight">
        Streamlined and Effective
      </h2>
      <p class="text-lg md:text-xl text-[var(--color-text-secondary)] max-w-2xl mx-auto">
        Our powerful 6-stage methodology
      </p>
    </div>
    
    <!-- Process Steps - Diagonal Asymmetric Layout -->
    <div class="relative max-w-6xl mx-auto mb-12 md:mb-16">
      <!-- Animated Center Line (Desktop) -->
      <svg 
        class="process-line-svg hidden lg:block absolute left-1/2 top-0 -translate-x-1/2 pointer-events-none"
        width="4"
        height="100%"
        style="height: calc(100% - 100px);"
      >
        <defs>
          <linearGradient id="lineGradient" x1="0%" y1="0%" x2="0%" y2="100%">
            <stop offset="0%" style="stop-color:#9333ea;stop-opacity:0.2" />
            <stop offset="50%" style="stop-color:#7c3aed;stop-opacity:0.6" />
            <stop offset="100%" style="stop-color:#6366f1;stop-opacity:0.2" />
          </linearGradient>
        </defs>
        <line 
          class="process-path-line"
          x1="2" 
          y1="0" 
          x2="2" 
          y2="100%" 
          stroke="url(#lineGradient)" 
          stroke-width="2"
          stroke-dasharray="1000"
          stroke-dashoffset="1000"
        />
      </svg>

      <!-- Process Steps -->
      <div class="space-y-8 lg:space-y-16 relative">
        {steps.map((step, index) => {
          const isLeft = index % 2 === 0;
          const stepNumber = String(index + 1).padStart(2, '0');
          
          return (
            <div 
              class={`process-step-item animate-on-scroll stagger-${index + 1} ${isLeft ? 'process-step-left' : 'process-step-right'}`}
              data-step={index + 1}
            >
              <!-- Desktop Layout -->
              <div class="hidden lg:grid grid-cols-2 gap-12 items-center">
                {isLeft ? (
                  <>
                    <!-- Left Side - Card -->
                    <div class="text-right">
                      <div class="process-card glassmorphic-card group">
                        <div class="flex items-start gap-6 flex-row-reverse">
                          <div class="flex-shrink-0">
                            <div class="gradient-number-badge">
                              {stepNumber}
                            </div>
                          </div>
                          <div class="flex-1 text-right">
