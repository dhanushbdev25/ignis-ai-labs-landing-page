---
import { mockPricing } from '../../lib/mock-data';

const plans = mockPricing;
---

<section id="pricing" class="section-padding bg-[var(--color-bg-primary)]">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-16 md:mb-20 animate-on-scroll">
      <span class="section-label mb-6 inline-block">Pricing</span>
      <h2 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 text-[var(--color-text-primary)] tracking-tight">
        Choose your plan
      </h2>
      <p class="text-lg md:text-xl text-[var(--color-text-secondary)]">
        Pick a plan that suits your needs
      </p>
    </div>
    
    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-10 max-w-5xl mx-auto">
      {plans.map((plan, index) => (
        <div 
          class={`animate-on-scroll relative group ${plan.featured ? 'md:-mt-6' : ''} stagger-{index + 1}`}
        >
          {/* Featured Badge */}
          {plan.featured && (
            <div class="absolute -top-5 left-1/2 transform -translate-x-1/2 z-10">
              <span class="inline-flex items-center px-5 py-2 rounded-full text-sm font-bold bg-gradient-to-r from-purple-600 to-purple-700 text-white shadow-xl animate-pulse-glow">
                Most Popular
              </span>
            </div>
          )}
          
          <div 
            class={`h-full card ${
              plan.featured 
                ? 'bg-gradient-to-br from-purple-600 to-purple-700 border-purple-500 text-white shadow-2xl shadow-purple-500/30 scale-105' 
                : 'bg-[var(--color-bg-card)]'
            }`}
          >
            <!-- Plan Name -->
            <h3 class={`text-2xl md:text-3xl font-bold mb-3 ${plan.featured ? 'text-white' : 'text-[var(--color-text-primary)]'}`}>
              {plan.name}
            </h3>
            
            <!-- Plan Description -->
            <p class={`mb-8 text-lg ${plan.featured ? 'text-purple-100' : 'text-[var(--color-text-secondary)]'}`}>
              {plan.description}
            </p>
            
            <!-- Price -->
            <div class="mb-10">
              <span class={`text-6xl md:text-7xl font-bold ${plan.featured ? 'text-white' : 'text-[var(--color-text-primary)]'} tracking-tight`}>
                ${plan.price}
              </span>
              <span class={`text-xl ${plan.featured ? 'text-purple-200' : 'text-[var(--color-text-secondary)]'}`}>
                /month
              </span>
            </div>
            
            <!-- CTA Button -->
            <button 
              class={`w-full py-5 px-8 rounded-full font-bold text-lg transition-all duration-500 mb-10 consultation-trigger ${
                plan.featured 
                  ? 'bg-white text-purple-600 hover:bg-purple-50 shadow-xl hover:shadow-2xl hover:scale-105' 
                  : 'bg-gradient-to-r from-purple-600 to-purple-700 text-white hover:from-purple-700 hover:to-purple-800 shadow-xl shadow-purple-500/20 hover:shadow-purple-500/40 hover:scale-105'
              }`}
              data-plan={plan.name}
            >
              Get started
            </button>
            
            <!-- Features List -->
            <ul class="space-y-5">
              {plan.features.map((feature) => (
                <li class="flex items-start gap-4">
                  <svg 
                    class={`w-6 h-6 flex-shrink-0 mt-0.5 ${plan.featured ? 'text-purple-200' : 'text-purple-600'}`} 
                    fill="none" 
                    stroke="currentColor" 
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span class={`text-lg ${plan.featured ? 'text-purple-100' : 'text-[var(--color-text-secondary)]'}`}>
                    {feature}
                  </span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
