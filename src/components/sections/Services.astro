---

<section id="services" class="pt-8 md:pt-12 lg:pt-16 pb-16 md:pb-20 lg:pb-24 bg-[var(--color-bg-secondary)]">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16 animate-on-scroll">
      <span class="section-label mb-4 inline-block">Services</span>
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-[var(--color-text-primary)]">
        What we offer
      </h2>
      <p class="text-lg text-[var(--color-text-secondary)]">
        A glimpse into our wide range of services
      </p>
    </div>
    
    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {services.map((service, index) => (
        <div 
          class="animate-on-scroll group bg-[var(--color-bg-card)] rounded-2xl p-6 md:p-8 border border-[var(--color-border)] hover:border-purple-500/50 hover:shadow-xl hover:shadow-purple-500/20 transition-all duration-500 transform hover:-translate-y-2"
          style={`transition-delay: ${index * 100}ms;`}
        >
          <!-- Icon -->
          <div class="w-14 h-14 rounded-xl bg-purple-900/30 flex items-center justify-center mb-5 group-hover:bg-purple-900/50 transition-colors duration-300">
            <svg 
              class="w-7 h-7 text-purple-600" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              set:html={icons[service.icon] || icons['layout']}
            />
          </div>
          
          <!-- Title -->
          <h3 class="text-xl font-bold mb-3 text-[var(--color-text-primary)] group-hover:text-purple-600 transition-colors duration-300">
            {service.title}
          </h3>
          
          <!-- Description -->
          <p class="text-[var(--color-text-secondary)] leading-relaxed">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
