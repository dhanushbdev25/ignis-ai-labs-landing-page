---
const navLinks = [
  { href: '#lifecycle', label: 'Process' },
  { href: '#benefits', label: 'Benefits' },
  { href: '#services', label: 'Services' },
  { href: '#faq', label: 'FAQ' },
];
---

<header id="navbar" class="fixed top-0 left-0 right-0 z-50 transition-all duration-500 ease-out">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16 sm:h-20 md:h-24">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 sm:gap-3 group flex-shrink-0 min-w-0">
        <!-- Hamburger Icon -->
        <div class="flex flex-col gap-1.5 flex-shrink-0">
          <span class="w-5 h-0.5 sm:w-6 bg-[var(--color-text-primary)] rounded-full transition-colors duration-300"></span>
          <span class="w-5 h-0.5 sm:w-6 bg-[var(--color-text-primary)] rounded-full transition-colors duration-300"></span>
          <span class="w-3 h-0.5 sm:w-4 bg-[var(--color-text-primary)] rounded-full transition-colors duration-300"></span>
        </div>
        <span class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-bold text-[var(--color-text-primary)] transition-colors duration-300 whitespace-nowrap">
          <span class="hidden min-[400px]:inline">Ignis AI Labs</span>
          <span class="min-[400px]:hidden">Ignis AI</span>
          <span class="text-gradient">.</span>
        </span>
      </a>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-10">
        {navLinks.map((link) => (
          <a 
            href={link.href} 
            class="text-[var(--color-text-primary)] hover:text-purple-600 font-medium text-base transition-colors duration-300 relative group"
          >
            {link.label}
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gradient-to-r from-purple-600 to-purple-400 group-hover:w-full transition-all duration-300"></span>
          </a>
        ))}
      </div>
      
      <!-- CTA Button -->
      <div class="flex items-center gap-2 sm:gap-4 flex-shrink-0">
        <!-- Book a call button - Glassmorphism style matching hero -->
        <button class="btn-hero-primary hidden sm:inline-flex consultation-trigger">
          <span class="btn-hero-text">Book a call</span>
        </button>
        
        <!-- Mobile Menu Button -->
        <button 
          class="md:hidden p-2 rounded-lg hover:bg-[var(--color-bg-tertiary)] transition-colors flex-shrink-0"
          id="mobile-menu-btn"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6 text-[var(--color-text-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Menu -->
    <div 
      id="mobile-menu"
      class="md:hidden hidden absolute top-full left-0 right-0 bg-[var(--color-bg-secondary)]/95 backdrop-blur-lg border-t border-[var(--color-border)] shadow-xl"
    >
      <div class="px-4 py-6 space-y-2">
        {navLinks.map((link) => (
          <a 
            href={link.href}
            class="block py-3 px-4 text-[var(--color-text-primary)] hover:text-purple-400 hover:bg-[var(--color-bg-tertiary)] rounded-xl font-medium transition-all duration-200"
          >
            {link.label}
          </a>
        ))}
        <div class="pt-4 border-t border-[var(--color-border)]">
          <button class="btn-hero-primary w-full consultation-trigger">
            <span class="btn-hero-text">Book a call</span>
          </button>
        </div>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16 sm:h-20 md:h-24"></div>

<script>
  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
  
  // Close menu when clicking a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
  
  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!menuBtn?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
      mobileMenu?.classList.add('hidden');
    }
  });

  // Glassmorphism effect on scroll
  const navbar = document.getElementById('navbar');
  let lastScroll = 0;
  
  function updateNavbar() {
    const currentScroll = window.pageYOffset;
    
    if (currentScroll > 50) {
      // Scrolled - Apply glassmorphism
      navbar?.classList.add('navbar-scrolled');
    } else {
      // At top - Remove glassmorphism
      navbar?.classList.remove('navbar-scrolled');
    }
    
    lastScroll = currentScroll;
  }
  
  // Smooth scroll handling with requestAnimationFrame
  let ticking = false;
  window.addEventListener('scroll', () => {
    if (!ticking) {
      window.requestAnimationFrame(() => {
        updateNavbar();
        ticking = false;
      });
      ticking = true;
    }
  });
  
  // Initial check
  updateNavbar();
</script>

<style>
  /* Default navbar - Dark theme */
  #navbar {
    background: rgba(10, 10, 10, 0.5);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  /* Glassmorphism effect on scroll - Dark theme */
  #navbar.navbar-scrolled {
    background: rgba(26, 26, 26, 0.8);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.5);
  }

  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    #navbar .container-custom {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  /* Extra small screens */
  @media (max-width: 375px) {
    #navbar a[href="/"] span {
      font-size: 0.875rem;
    }
    
    #navbar .flex.flex-col.gap-1\.5 span {
      width: 0.875rem;
    }
    
    #navbar .flex.flex-col.gap-1\.5 span:last-child {
      width: 0.625rem;
    }
  }
</style>
