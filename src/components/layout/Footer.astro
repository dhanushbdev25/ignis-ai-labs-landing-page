---

<footer class="bg-[var(--color-bg-secondary)] py-16 md:py-24">
  <div class="container-custom">
    <!-- Centered Logo -->
    <div class="flex justify-center mb-10">
      <a href="/" class="flex items-center">
        <img 
          src="/images/systems/Ignis logo Dark Theme.svg" 
          alt="Ignis AI Labs" 
          style="height: 80px; width: auto; max-width: 240px;"
          class="transition-opacity duration-300 hover:opacity-80 object-contain"
        />
      </a>
    </div>
    
    <!-- Navigation Links - Horizontal -->
    <nav class="flex flex-wrap justify-center gap-6 md:gap-10 mb-8">
      {footerLinks.map((link) => (
        <a 
          href={link.href}
          class="text-[var(--color-text-primary)] hover:text-purple-600 transition-colors duration-200 font-medium"
        >
          {link.label}
        </a>
      ))}
    </nav>
    
    <!-- Bottom Bar -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-6 pt-8 border-t border-[var(--color-border)]">
      <!-- Copyright -->
      <p class="text-[var(--color-text-secondary)] text-sm">
        Â© Copyright {currentYear} Ignis AI Labs.
      </p>
      
      <!-- Social Links -->
      <div class="flex items-center gap-3">
        {socialLinks.map((social) => (
          <a 
            href={social.href}
            class="w-12 h-12 rounded-full bg-[var(--color-bg-card)] border border-[var(--color-border)] shadow-sm flex items-center justify-center text-[var(--color-text-primary)] hover:shadow-md hover:text-purple-400 hover:border-purple-500/50 transition-all duration-300"
            aria-label={social.label}
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d={social.icon}/>
            </svg>
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>
