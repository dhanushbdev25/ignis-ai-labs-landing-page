---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/sections/Hero.astro';
import LifeCycleEvolution from '../components/sections/LifeCycleEvolution.astro';
import TrustedBy from '../components/sections/TrustedBy.astro';
import Benefits from '../components/sections/Benefits.astro';
import IntelligenceApplied from '../components/sections/IntelligenceApplied.astro';
import Projects from '../components/sections/Projects.astro';

// React interactive components
import TestimonialsHorizontal from '../components/interactive/TestimonialsHorizontal';
import FAQAccordion from '../components/interactive/FAQAccordion';
import ConsultationModal from '../components/interactive/ConsultationModal';

// Mock data for now - will be replaced with Sanity data
import { mockTestimonials, mockFAQs } from '../lib/mock-data';
---

<Layout>
  <Hero />
  <LifeCycleEvolution />
  <Benefits />
  <IntelligenceApplied />
  <TrustedBy />
  <Projects />
  
  <!-- React Islands for interactive components -->
  <TestimonialsHorizontal 
    client:load 
    testimonials={mockTestimonials} 
  />
  
  <FAQAccordion 
    client:visible 
    faqs={mockFAQs} 
  />
  
  <!-- Consultation Modal - Always mounted for trigger handling -->
  <ConsultationModal client:load />
</Layout>
