---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/layout/Navbar.astro';
import Footer from '../components/layout/Footer.astro';
---

<Layout title="404 - Page Not Found | Ignis AI Labs">
  <Navbar />
  
  <main class="min-h-[60vh] flex items-center justify-center">
    <div class="container-custom text-center py-20">
      <!-- 404 Graphic -->
      <div class="relative mb-8">
        <h1 class="text-[150px] md:text-[200px] font-bold text-gradient opacity-20 leading-none">
          404
        </h1>
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-24 h-24 rounded-full bg-gradient-primary flex items-center justify-center animate-pulse-glow">
            <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
        </div>
      </div>
      
      <!-- Content -->
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Page Not Found
      </h2>
      <p class="text-xl text-[var(--color-text-secondary)] mb-8 max-w-md mx-auto">
        Oops! The page you're looking for doesn't exist or has been moved.
      </p>
      
      <!-- Actions -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/" class="btn btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Back to Home
        </a>
        <button class="btn btn-secondary consultation-trigger">
          Contact Support
        </button>
      </div>
    </div>
  </main>
  
  <Footer />
</Layout>
